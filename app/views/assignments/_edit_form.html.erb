<%= render "shared/error_messages", :target => @course %>

<%= form_for @assignment, url: assignment_url(@assignment), method: :patch do |f| %>
  <%= f.text_field :name, :placeholder => 'Assignment Name' %><br>
  <%= f.text_area :description, :placeholder => 'Assignment Description' %><br>
  <%= f.label "Assignment Available Date: " %>
  <%= f.text_field :start_date %><br>
  <%= f.label "Assignment Due Date: " %>
  <%= f.text_field :due_date %><br>
  <%= f.submit "Edit" %>
<% end %>

<script>
  $(document).on("page:load", function() {
    $('#assignment_start_date').datetimepicker({format: 'unixtime', value: Math.floor(new Date().getTime()/1000)});
    $('#assignment_due_date').datetimepicker({format: 'unixtime', value: Math.floor(new Date().getTime()/1000)});
  });
</script>
