<tr>
  <td>
      <ul class="accordion">
        <li>
          <a class="toggle" id=<%= "run_method_" + run_method.id.to_s %> href="javascript:void(0);">
            <%= run_method.name %>
          </a>
          <ul class="inner">
            <table>
              <tbody>
                <tr>
                <th>Command</th>
                  <td><%= run_method.run_command %></td>
                <th>Description</th>
                  <td><%= run_method.description %></td>
                </tr>
                <tr>
                  <th colspan="4"> Testcases </th>
                </tr >
                <%= render run_method.inputs %>
          </tbody>
        </table>
          </ul>
        </li>
      </ul>
  </td>
  <td>
    <a id="<%= j 'run_method_edit_' + run_method.id.to_s %>" href="#"> Edit </a>
  </td>

  <td>
      <%= link_to 'X', run_method, method: :delete, remote: true, data: { confirm: "Are You Sure?" } %>
  </td>
</tr>


<script>
  $("#<%= j 'run_method_edit_' + run_method.id.to_s %>").click(function() {
    $("#run-methods").html('<%= j(render(:file => "run_methods/_run_method_edit_form", :locals => { :run_method => run_method })) %>');
    $("input[id='run_method_name']").val("<%= j (run_method.name) %>");
    $("input[id='run_method_run_command']").val("<%= j (run_method.run_command) %>");
    $("input[id='run_method_description']").val("<%= j (run_method.description) %>");
    $('#edit-run-method-modal').show();
  });
    $("#<%= j 'run_method_' + run_method.id.to_s %>").next().hide()
    $("#<%= j 'run_method_' + run_method.id.to_s %>").click(function(e) {
    e.preventDefault();
    var $this = $(this);
    if ($this.next().hasClass('show')) {
        $this.next().removeClass('show');
        $this.next().slideUp(350);
    } else {
        $this.parent().parent().find('li .inner').removeClass('show');
        $this.parent().parent().find('li .inner').slideUp(350);
        $this.next().toggleClass('show');
        $this.next().slideToggle(350);
    }
  });
</script>
