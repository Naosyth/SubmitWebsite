<% content_for :title, get_assignment.name + " Test Case" %>

<header>
  <h1><%= get_assignment.name %> Test Case</h1>
</header>

<div class="content-group">
  <% @test_case.upload_data.each do |upload_data| %>
    File Name:
  	<%= link_to upload_data.name, upload_datum_path(upload_data) %>
    <%= link_to 'Edit', edit_upload_datum_path(upload_data) %>
  	<%= link_to 'Delete', upload_data, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= upload_data.updated_at %>
    <%= upload_data.created_at %>
    <%= upload_data.file_type %>
    <%= form_tag reupload_test_case_url(upload_data), method: :patch, :multipart => true do %>
      <%= file_field_tag 'upload_file' %>
      <%= submit_tag "Update File" %>
    <% end %>
  <br>
  <% end %>
  <br>
  <%= form_tag upload_test_case_url(@test_case), method: :post, :multipart => true do %>
  	<%= file_field_tag 'upload_file' %>
  	<%= submit_tag "Save File" %>
  <% end %>
</div>
