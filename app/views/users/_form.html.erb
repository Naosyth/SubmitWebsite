<%= render "shared/error_messages", :target => @user %>

<div class="registerPrompt">
  <%= form_for @user do |f| %>
    <div class="registerPrompt">
      <%= f.text_field :name, :placeholder => 'Your Name' %>
      <%= f.text_field :email, :placeholder => 'email@example.com' %><br>
      <%= f.password_field :password, :placeholder => 'password' %>
      <%= f.password_field :password_confirmation, :placeholder => 'confirmation password' %>
    </div>
    <%= f.submit "Register" %>
  <% end %>
</div>